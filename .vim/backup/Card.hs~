module Magic.Card where

type CardTitle = String
type ManaCost  = String
type CardType  = String
type CardStat  = String
type CardText  = String
type Editions  = String
type Loyalty = Int

data PowerToughness = PowerToughness Int Int deriving (Eq, Show, Read)

data Card = Card { title          :: CardTitle 
                 , manaCost       :: Maybe ManaCost
                 , cardType       :: CardType
                 , cardStat       :: Maybe String
                 , cardText       :: Maybe CardText 
                 , editions       :: Editions } deriving (Eq, Show)

